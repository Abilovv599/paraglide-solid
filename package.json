{
  "name": "paraglide-solid",
  "version": "0.1.0",
  "description": "SolidJS + SolidStart integration for @inlang/paraglide-js. Reactive locale signals, SSR-safe context, and middleware for SolidStart.",
  "type": "module",
  "exports": {
    ".": {
      "solid": "./src/index.tsx",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    },
    "./valibot": {
      "import": "./dist/valibot.js",
      "types": "./dist/valibot.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "check": "biome check --write && tsc --noEmit"
  },
  "peerDependencies": {
    "@inlang/paraglide-js": ">=2.0.0",
    "@solidjs/start": ">=1.2.0",
    "solid-js": ">=1.8.0"
  },
  "peerDependenciesMeta": {
    "@solidjs/start": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@inlang/paraglide-js": "^2.12.0",
    "@solidjs/start": "^1.3.2",
    "solid-js": "^1.9.11",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "paraglide",
    "solid",
    "solidstart",
    "i18n",
    "inlang",
    "valibot"
  ],
  "license": "MIT"
}
